<tr>
	<td class="align-middle p-0">@CountryModel.Id</td>
	<td class="p-0">
		<InputText @bind-Value="CountryModel.Name" class="form-control form-control-sm" placeholder="наименование..." />
		<ValidationMessage For="(()=>CountryModel.Name)" />
	</td>
	<td class="p-0">
		<InputText @bind-Value="CountryModel.NameEn" class="form-control form-control-sm" placeholder="name..." />
		<ValidationMessage For="(()=>CountryModel.NameEn)" />
	</td>
	<td class="p-0">
		<InputText @bind-Value="CountryModel.ShortName" class="form-control form-control-sm" placeholder="кратко..." />
		<ValidationMessage For="(()=>CountryModel.ShortName)" />
	</td>
	<td class="p-0">
		<InputText @bind-Value="CountryModel.Ticker" class="form-control form-control-sm" placeholder="тикер..." />
		<ValidationMessage For="(()=>CountryModel.Ticker)" />
	</td>
	<td class="align-middle py-0" style="width: 50px;">
		<button class="far fa-save text-success p-0" style="background-color: transparent; border: 0;" type="submit" tooltip="save" />
		<button class="fas fa-ban text-danger p-0" style="background-color: transparent; border: 0;" type="button" tooltip="cancel" @onclick="()=> Cancel()" />
	</td>
</tr>


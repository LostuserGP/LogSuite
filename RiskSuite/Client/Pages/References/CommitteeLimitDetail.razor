
<div class="">
    <div class="d-flex">
        <div class="mx-auto justify-content-center">
            <h3>@Title Committee limit</h3>
        </div>
        @if (Id != null)
        {
            <div class="justify-content-end">
                <button class="btn btn-sm btn-danger" @onclick="@Delete">Delete</button>
            </div>
        }
    </div>

    <div class="mt-0">
        <EditForm Model="Model" OnValidSubmit="HandleValueSubmit">
            <div class="py-2">
                <InputText @bind-Value="Model.Name" class="form-control" placeholder="Name..." />
                <ValidationMessage For="(()=>Model.Name)" />
            </div>
            <div class="py-2">
                @if (IsProcessing)
                {
                    <button type="submit" class="btn btn-success btn-block disabled"><i class="fas fa-sign-in-alt"></i> Please Wait...</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success btn-block"><i class="fas fa-sign-in-alt"></i>@Title</button>
                }
            </div>
        </EditForm>
    </div>
</div>

<ConfirmationModal 
                   IsParentComponentProcessing="IsProcessing" 
                   ConfirmationChanged="ConfirmDelete"
                   Title="ConfirmTitle"
                   Message="ConfirmMessage">
</ConfirmationModal>
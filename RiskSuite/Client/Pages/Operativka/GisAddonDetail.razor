
<div class="card h-100">
	<div class="card-body p-0">
		<div class="d-flex card-title">
			<div class="justify-content-start">
				<h3>@Addon?.Name</h3>
			</div>
			<div class="mx-auto justify-content-center">
			</div>
			<div class="justify-content-end">
				<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
					<div class="btn-group mr-2 pt-2" role="group" aria-label="PHG">
						<button type="button" class="btn btn-sm btn-secondary" @onclick="@(() => ShowDetail = "names")">Наименования</button>
						@*<button type="button" class="btn btn-sm btn-secondary" @onclick="@(() => ShowDetail = "countries")">Страны</button>*@
					</div>
				</div>
			</div>
		</div>
		<div class="card-text" style="font-size: small;">
			@if (ShowDetail == "names")
			{
				<GisAddonName Addon="@Addon" />
			}
				
		</div>
	</div>
</div>
@using LogSuite.Shared.Models.References

<style>
	.inner-card {
		position: absolute;
		height: calc(100% - 82px);
		bottom: 0;
		left: 0;
		right: 0;
		border: 0;
	}
</style>

<div class="card inner-card">
	<div class="card-body">
		@if (IsProcessing)
		{
			<div style="position:fixed;top:50%;left:50%;margin-top:-50px;margin-left:-100px;">
				<img src="images/ajax-loader.gif" />
			</div>
		}
		else
		{
			<CascadingValue Value="GisCountryModel">
				<EditForm Model="GisCountryModel" OnValidSubmit="HandleSubmit">
					<DataAnnotationsValidator />
					<ValidationSummary />
					<table class="table table-sm table-bordered table-hover">
						<thead>
							<tr>
								<TableHeader Params="_parameters" ColumnName="ID" DbName="Id" OnSortChangedSubmit="OnSortChanged" />
								<TableHeader Params="_parameters" ColumnName="Наименование" DbName="Name" OnSortChangedSubmit="OnSortChanged" />
								<TableHeader Params="_parameters" ColumnName="Скрывать" DbName="IsHidden" OnSortChangedSubmit="OnSortChanged" />
								<TableHeader Params="_parameters" ColumnName="Рассчитывается" DbName="IsCalculated" OnSortChangedSubmit="OnSortChanged" />
								<TableHeader Params="_parameters" ColumnName="Множитель" DbName="Multiplicator" OnSortChangedSubmit="OnSortChanged" />
								<th>
									@if (EditMode == "none")
								{
									<button class="btn-success" style="border: 0;" type="button" @onclick="@(() => Create())">создать</button>
								}
							</th>
						</tr>
					</thead>
					<tbody>
						@if (EditMode == "new")
						{
							<GisCountryEdit Countries="Countries" OnValueSubmit="HandleSubmit" OnCancel="Cancel" />
						}
						@if (GisCountries != null && GisCountries.Any())
						{
							@foreach (var gc in GisCountries)
							{
								@if (EditMode == "edit" && GisCountryModel.Id == gc.Id)
								{
									<GisCountryEdit Countries="Countries" OnValueSubmit="HandleSubmit" OnCancel="Cancel" />
								}
								else
								{
									<tr>
										<td class="align-middle py-0">@gc.Id</td>
										<td class="align-middle py-0">@gc.Country.Name</td>
										<td class="align-middle py-0">
											@if (gc.IsHidden) { <i class="fa fa-check" aria-hidden="true"></i> }
										</td>
										<td class="align-middle py-0">
											@if (gc.IsCalculated) { <i class="fa fa-check" aria-hidden="true"></i> }
										</td>
										<td class="align-middle py-0">@gc.Multiplicator</td>
										<td class="align-middle py-0" style="width: 50px;">
											<button class="fas fa-edit text-primary p-0" style="background-color: transparent; border: 0;" type="button" tooltip="cancel" @onclick="()=> HandleUpdate(gc)" />
											<button class="far fa-trash-alt text-danger p-0" style="background-color: transparent; border: 0;" type="button" tooltip="cancel" @onclick="()=> HandleDelete(gc.Id)" />
										</td>
									</tr>
								}
							}
						}
					</tbody>
				</table>
			</EditForm>
		</CascadingValue>
		}
	</div>
	<div class="card-footer p-0">
		<Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage" OnFilterChanged="FilterChanged" />
	</div>
</div>

